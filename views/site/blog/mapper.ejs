<!DOCTYPE html>
<html>
  
<%- include ("../partials/head") %>

<body>
    <div id="main-wrapper" data-theme="light" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
        data-sidebar-position="fixed" data-header-position="fixed" data-boxed-layout="full">
        
        <%- include ("../partials/header") %>
        <!-- End Topbar header -->

        <%- include ("../partials/sidebar") %>
        <!-- End of sidebar -->

        <!-- CONTENT -->
        <div class="page-wrapper">
            <div class="container-fluid">
    
                <!--------Tweet Mapper Search-->
                <div class="row">
                    <div class="col-md-12 align-items-center">
                        <h5>Enter a Twitter user name to view all their tweets, likes, followers or timeline</h5>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body">
                                <form action="/blog/mapper" method="GET" class="mt-2">
                                    <h4 class="card-title">Search From Twitter</h4>

                                    <div class="form-group" style="width: 100%; display: flex;">
                                        <input type="text" class="form-control" required name="search" id="search" placeholder="Enter user" value="<%= search %>">
                                        <button type="submit" id="searchBtn" class="btn btn-success" disabled>OK</button>
                                    </div>
                                    <div>
